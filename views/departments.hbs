{{!-- Assignment 4 part 4 step 1 --}}
<div class="row">
 <div class="col-md-12">
 <h2>Departments <a href="/departments/add" class="btn btn-success pull-right">Add New
Department</a></h2>
 <hr>
<div class="table-responsive"> {{!-- Part 4 step 2 --}}
        <table class="table">
            <thead>
                <tr>
                    <th>Department Number</th>
                    <th>Department Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each departments}} {{!--it will be used for the department. --}}
                <tr>
                    <td>
                        <a href="/employees?department={{this.departmentId}}">{{this.departmentId}}</a>  {{!-- code to iterate over each department and
simply render their id  --}}
                    </td>            
                    <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>         
                </tr>
                {{else}}
                        <div class="col-md-12 text-center">
                            <strong> {{message}} </strong>
                        </div>
                {{/each}}
                </tbody>
        </table>
    </div>
 </div>
</div>
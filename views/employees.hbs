{{!--  Assignment 4 part 3 step 1 --}}

<div class="row">
 <div class="col-md-12">
 <h2>Employees</h2>
 <hr />
<div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Employees Num</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Manager ID</th>
                        <th>Status</th>
                        <th>Department</th>
                        <th>Hire On</th>
                    </tr>
                </thead>
                <tbody>
                {{#each employees}}
                    <tr>
                        <td>{{this.employeeNum}}</td>
                        <td>
                            <a href="/employee/{{this.employeeNum}}"
                                >{{this.firstName}} {{this.lastName}}</a> {{!-- this one to print the first and last name  --}}
                        </td>
                        <td>
                            <a href="mailto:{{this.email}}">{{this.email}}</a> {{!-- The "Email" column must be a "mailto" link to the user's email address for that row --}}
                        </td>
                        <td>
                            {{this.addressStreet}}, {{this.addressCity}}, {{this.addressState}}, {{this.addressPostal}} {{!-- this one for the address first it will print the street then city then state and at last it prints the postal code --}}
                        </td>
                        <td>
                            <a href="o /employees?manager={{this.employeeManagerNum}}"> {{this.employeeManagerNum}}</a> {{!-- this one for the emp manager number. --}}
                        </td>
                        <td>
                            <a href="/employees?status={{this.status}}"> {{this.status}}</a> {{!-- this one for the employee status eg: full time, part time --}}
                        </td>
                        <td>
                            <a href=" /employees?department={{this.department}}">{{this.department}}</a>{{!-- this one for the employee department. --}}
                        </td>
                        <td>{{this.hireDate}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>{{!--the following code that will conditionally display the "message" if there are no employees --}}
            </div>
            </div>
        </div>
 </div>
</div>